'--------------------------------------------------------------------------------
'Declare Data Control
'--------------------------------------------------------------------------------
!procedure $uumf_recordLayout()
  class recordLayout <<enumeration>> {
      -form
      -grid
      -reportFreeForm
      -reportTabular
      -reportGrouped
      -reportGraphic
  }
!endprocedure

'--------------------------------------------------------------------------------
'Declare Relationships
'--------------------------------------------------------------------------------
!procedure $uumf_associtarion($class1 = "A", $class2 = "B", $type="-->")
  $class1 $type $class2
!endprocedure

'--------------------------------------------------------------------------------
'Declare Data Control
'--------------------------------------------------------------------------------
!unquoted procedure $uumf_dataControl($name = "dataControlName", $recordlayout = "form")
  !local $dataControlName = $name

  !if ($dataControlName == "" || $dataControlName == "dataControlName")
    !$dataControlName = $textColor("dataControlName", "Red")
  !endif

  !if ($recordlayout == "" || $dataControlName == "dataControlName")
    !$dataControlName = $textColor("dataControlName", "Red")
  !endif

  !if ($recordlayout != "form") && ($recordlayout != "grid") && ($recordlayout != "reportFreeForm") && ($recordlayout != "reportTabular") && ($recordlayout != "reportGrouped")
      !$recordlayout = "** error Record Layout **"
  !endif

  $defClass($classType = "", $name = $dataControlName, $stereotype = "<<dataControl>>", $color = "")
    $defClassAttribute($visibility = "-", $name = "layout", $dataType = "recordLayout", $defaultValue = $recordlayout)
    + actionsWhenOpen() :void
    + actionsWhenClose() : void
  $defClassEnd()
  
  !if ($recordlayout == "** error Record Layout **")
    $uumf_recordLayout()
  !endif

!endprocedure

@enduml

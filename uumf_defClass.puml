!unquoted function $defClass($classType="", $name="name", $stereotype="")
  !local $aux = $classType
  
  !if (%upper($classType) == "STANDARD")
    !$classType = ""
  !endif
  !if ($name == "" || %lower($name) == "name")
    !$name = "**name**"
  !endif
  !return $classType + " class " + $name + " " + $stereotype + "{"
!endfunction
!function $defClassEnd()
  !return "}"
!endfunction
!unquoted function $defClassAttribute($visibility = "-", $name="attribute" , $dataType = "T", $pk = "FALSE", $unique = "FALSE", $required = "FALSE", $hidden = "FALSE", $calculate = "", $constraint = "")
  !local $aux = $visibility

  !if ($name == "" || %lower($name) == "attribute")
    !$aux = $aux + "**attribute**"
  !else
    !$aux = $aux + $name 
  !endif
  
  !if ($dataType != "")
    !$aux = $aux + " :" + $dataType
  !endif

  !if  (%lower($pk) == "true")
    !$aux = $aux + " {PK}"
  !endif

  !if (%lower($unique) == "true")
    !$aux = $aux + " {unique}"
  !endif

  !if (%lower($required) == "true")
    !$aux = $aux + " {required}"
  !endif

  !if (%lower($hidden) == "true")
    !$aux = $aux + " {hidden}"
  !endif

  !if ($calculate != "")
    !$aux = $aux +  ' {calculate = "' + $calculate + '"}'
  !endif

  !if ($constraint != "")
    !$aux = $aux + ' {constraint = "' + $constraint + '"}'
  !endif    

  !return $aux
!endfunction
